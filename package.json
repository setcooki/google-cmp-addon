{
  "name": "google-cmp-addon",
  "version": "1.0.0",
  "description": "Adds the missing functionality for google consent pupose management",
  "scripts": {
    "dev": "webpack serve --config webpack.config.react.js --port 3003 --hot --open",
    "dev-build": "webpack --config webpack.config.react.js --mode development",
    "test": "jest",
    "watch": "npm-watch build",
    "build": "tsup && webpack",
    "build-esm": "tsup",
    "build-umd": "webpack",
    "typecheck": "tsc --noEmit",
    "pretty": "npx prettier --write 'src/**/*.{tsx,ts,js}'",
    "lint": "npx eslint src --ext tsx,ts,js --report-unused-disable-directives --fix --max-warnings 10",
    "prettylint": "npx prettier --write 'src/**/*.{tsx,ts,js}' && npx eslint src --ext tsx,ts,js --report-unused-disable-directives --fix --max-warnings 10"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "tsx,ts,js",
      "silent": true
    }
  },
  "main": "./dist/umd/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist/esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/setcooki/google-cmp-addon.git"
  },
  "keywords": [
    "google",
    "cmp"
  ],
  "author": "Frank Mueller <set@cooki.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/setcooki/google-cmp-addon/issues"
  },
  "homepage": "https://github.com/setcooki/google-cmp-addon#readme",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "npm-watch": "^0.11.0",
    "react-scripts": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
